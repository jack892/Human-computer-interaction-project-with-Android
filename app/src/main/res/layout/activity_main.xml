<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ium.swag.yolo.saxs.MainActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#cfd8dc">

    <Button
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Comunicazione Verbale"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/s2gButton"
        android:layout_weight="0.33"
        android:background="@color/colorPrimaryDark"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/mic_small"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_margin="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Comunicazione LIS"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/g2sButton"
        android:layout_weight="0.33"
        android:background="@color/colorAccent"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/cam_small"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_margin="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Istruzioni"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/infoButton"
        android:layout_weight="0.33"
        android:background="@color/bluInfo"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/info_small"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_margin="8dp"/>

</LinearLayout>
