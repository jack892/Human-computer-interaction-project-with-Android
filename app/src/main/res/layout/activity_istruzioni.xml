<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ium.swag.yolo.saxs.Istruzioni"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/bluInfo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="32dp"
        android:paddingTop="10dp"
        android:text="Bisogno di aiuto?"
        android:id="@+id/textView"
        android:layout_weight="0.15" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Comunicazione Vocale"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/istruzioniS2GButton"
        android:layout_weight="0.33"
        android:background="@color/colorPrimaryDark"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/mic_small"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_margin="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Comunicazione gestuale"
        android:textColor="#FFF"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/istruzioniG2SButton"
        android:layout_weight="0.33"
        android:background="@color/colorAccent"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/cam_small"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_margin="8dp"/>

</LinearLayout>
